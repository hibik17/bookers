<div class="row">
  <div class="col-md-6 mx-auto">
    <h1 class="font-blod">Editing Group</h1>
    <%= form_with model: @group, url: groups_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :グループ名 %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :紹介文 %>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :グループ画像 %>
        <%= f.file_field :group_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>
