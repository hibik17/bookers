<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <%= render 'post_count/dayPostCount', todays_posts: @todays_post, lastdays_post: @lastdays_post, ratio: @ratio %>
      <%= render 'post_count/weekPostCount', week_post: @week_post, lastweek_post: @lastweek_post, week_ratio: @week_ratio %>
      <h2>7日分の投稿数</h2>
      <%= render 'post_count/sevendaysPostCount', day_array: @day_array%>
      <h4 class="text-center text-primary">7日間の投稿数の比較</h4>
      <%= render 'post_count/sevendaysChart', weekposts_array: @weekposts_array, day_array: @day_array %>
    </div>
  </div>
</div>
